<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('header.ejs') -%>
    <title>AllTalks</title>
</head>

<body>
    <%- include('navbar.ejs') -%>

    <div class="container">
        <div class="row my-5">
            <div class="col-sm-6 col-md-4 mx-auto">
                <h2 class="text-center login-title my-5">Welcome to AllTalks!</h2>
                <div class="account-wall">
                    <img class="profile-img"
                        src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                        alt="">
                    <form class="form-signin" action="/join" method="POST">
                        <input id="name" class="form-control" placeholder="Name" required name="Name"
                            autocomplete="off" onchange="setName(this.value)">
                        <input  class="form-control" placeholder="RoomId" required name="RoomId">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            Join</button>
                    </form>
                    <br>
                     <!--
                    <a class="btn btn-lg btn-primary btn-block" href="/room">
                        New meeting</a>
                    -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
        <script src="script.js"></script>
</body>

</html>